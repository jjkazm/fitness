%nav.navbar.navbar-expand-lg.navbar-light.bg-light
  =link_to "Athletes Den", root_path, class:"navbar-brand"
  %button.navbar-toggler{"aria-controls" => "navbarSupportedContent", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarSupportedContent", "data-toggle" => "collapse", :type => "button"}
    %span.navbar-toggler-icon
  #navbarSupportedContent.collapse.navbar-collapse
    %ul.navbar-nav.mr-auto
      %li.nav-item.active
        =link_to "Home", root_path, class:"nav-link"
      - if user_signed_in?
        %li.nav-item
          = link_to "My Lounge", user_exercises_path(current_user), class: "nav-link"
        %li.nav-item
          = link_to "Sign out", destroy_user_session_path, method: :delete, class:"nav-link"
        %li.nav-item
          = link_to "Signed in as #{current_user.email}", root_path, class:"nav-link"
      - else
        %li.nav-item
          =link_to "Signup", new_user_registration_path, class:"nav-link"
        %li.nav-item
          =link_to "Log in", new_user_session_path, class:"nav-link"

      %li.nav-item.dropdown
        %a#navbarDropdown.nav-link.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
          Dropdown
        .dropdown-menu{"aria-labelledby" => "navbarDropdown"}
          %a.dropdown-item{:href => "#"} Athletes Den
          %a.dropdown-item{:href => "#"} Another action
          .dropdown-divider
          %a.dropdown-item{:href => "#"} Something else here
      %li.nav-item
        %a.nav-link.disabled{:href => "#"} Disabled

    = form_tag(search_dashboards_path, class: "navbar-form navbar-left", role: "search") do
      .form-group
        = text_field_tag :search_name, nil, placeholder: "Search for friends", class: "form-control"
      = submit_tag "Search", class: "btn btn-default"
