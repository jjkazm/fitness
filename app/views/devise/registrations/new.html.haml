.col-md-12
  .text-center
    %h2 Sign up
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name),  wrapper: :horizontal_form) do |f|
      = f.error_notification
      = f.input :email, input_html: { autocomplete: 'email' }
      = f.input :password
      = f.input :password_confirmation
      = f.button :submit, "Signup", class: "btn-primary"
    = render "devise/shared/links"
